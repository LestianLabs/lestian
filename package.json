{
  "private": true,
  "name": "lestian",
  "description": "Incentivized Light Node",
  "version": "1.0.0",
  "author": "Lestian Labs <lestianlabs@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build-osx": "nextron build --mac --universal",
    "build-linux": "nextron build --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "app-root-dir": "^1.0.2",
    "axios": "^1.6.2",
    "decompress": "^4.2.1",
    "decompress-targz": "^4.1.1",
    "electron-deeplink": "^1.0.10",
    "electron-dl": "^3.5.1",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "electron-traywindow-positioner": "^1.2.0",
    "viem": "^1.19.9"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "autoprefixer": "^10.4.16",
    "electron": "^26.2.2",
    "electron-builder": "^24.9.1",
    "next": "^12.3.4",
    "nextron": "^8.12.0",
    "postcss": "^8.4.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "build": {
    "appId": "com.lestian",
    "mac": {
      "icon": "resources/icon.png",
      "hardenedRuntime": true,
      "entitlements": "main/entitlements.mac.plist",
      "entitlementsInherit": "main/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "category": "public.app-category.developer-tools",
      "type": "distribution"
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": [
        "AppImage"
      ]
    }
  }
}
